<%= panel_with_heading 'Control Panel' do %>
	<h4 class="text-center">Physical Server</h4>
	<%= link_to 'Start', start_minecraft_path(@minecraft), class: "btn btn-success btn-block #{@minecraft.server.remote.error? || @minecraft.server.running? ? 'disabled' : ''}" %>
	<%= link_to 'Stop', stop_minecraft_path(@minecraft), class: "btn btn-danger btn-block #{@minecraft.server.remote.error? || !@minecraft.server.running? ? 'disabled' : ''}" %>
	<%= link_to 'Reboot', reboot_minecraft_path(@minecraft), class: "btn btn-info btn-block #{@minecraft.server.remote.error? || !@minecraft.server.remote.exists? ? 'disabled' : ''}" %>
	<hr />
	<h4 class="text-center">Minecraft</h4>
	<%= link_to 'Start', resume_minecraft_path(@minecraft), class: "btn btn-success btn-block #{@minecraft.server.remote.error? || !@minecraft.server.running? || @minecraft.running? ? 'disabled' : ''}" %>
	<%= link_to 'Stop', pause_minecraft_path(@minecraft), class: "btn btn-info btn-block #{@minecraft.server.remote.error? || !@minecraft.server.running? || !@minecraft.running? ? 'disabled' : ''}" %>
	<hr />
	<%= link_to 'Backup remotely', backup_minecraft_path(@minecraft), class: "btn btn-success btn-block #{@minecraft.server.remote.error? || !@minecraft.server.running? || @minecraft.running? ? 'disabled' : ''}" %>
	<%= link_to 'Download world', download_minecraft_path(@minecraft), class: "btn btn-info btn-block #{@minecraft.server.remote.error? || !@minecraft.server.running? || @minecraft.running? ? 'disabled' : ''}" %>
	<% if @minecraft.is_owner?(current_user) %>
		<hr />
		<%= link_to 'Delete', minecraft_path(@minecraft), method: :delete, class: "btn btn-danger btn-block #{@minecraft.user.digital_ocean_invalid? ? 'disabled' : ''}", data: { confirm: 'Are you sure you want to delete this server forever? (A really long time!)' } %>
	<% end %>
<% end %>
