<% title 'My Servers - Gamocosm' %>
<div class="row">
	<div class="col-sm-12">
		<div class="page-header">
			<h1>Servers <small>for <%= current_user.email %></small></h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-8">
		<table class="table table-striped">
			<thead>
				<tr>
					<td>Name</td>
					<td>Domain</td>
					<td>IP Address</td>
					<td>Status</td>
				</tr>
			</thead>
			<tbody>
			<% if @minecrafts.blank? && @friend_minecrafts.blank? %>
				<%= render 'empty' %>
			<% else %>
				<%= render partial: 'minecraft', collection: @minecrafts %>
				<%= render partial: 'minecraft', collection: @friend_minecrafts %>
			<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-sm-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">New Server</h3>
			</div>
			<div class="panel-body">
				<%= render partial: 'create' %>
			</div>
		</div>
	</div>
</div>
<% if !current_user.digital_ocean_missing? %>
	<%= render partial: 'digital_ocean_panel' %>
<% end %>
