<div class="row">
	<div class="col-sm-12">
		<%= panel_with_heading 'Digital Ocean' do %>
			<div class="row">
				<div class="col-sm-8 col-sm-offset-2">
					This information is provided for you to help you monitor your Digital Ocean account.
					You can always log into <%= link_to 'Digital Ocean\'s control panel', digital_ocean_control_panel_path %> for more control.
					<br />
					<div class="text-center">
						<%= link_to 'Refresh cache', refresh_digital_ocean_cache_path, method: :delete %>
						&bull; <%= link_to 'Digital Ocean status', digital_ocean_status_path %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-5">
					<h4>Droplets</h4>
					<table id="digital_ocean_droplets" class="table table-striped table-no_fixed" data-url="<%= show_digital_ocean_droplets_path %>">
						<tr><td><i>Fetching data ...</i></td></tr>
					</table>
				</div>
				<div class="col-sm-7">
					<h4>Snapshots</h4>
					<table id="digital_ocean_snapshots" class="table table-striped table-no_fixed" data-url="<%= show_digital_ocean_snapshots_path %>">
						<tr><td><i>Fetching data ...</i></td></tr>
					</table>
				</div>
			</div>
		<% end %>
	</div>
</div>
