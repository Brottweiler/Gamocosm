<%= simple_form_for @server, url: advanced_minecraft_server_path(@server), method: :put do |f| %>
	<%= panel_with_heading 'Advanced Configuration' do %>
		<%= f.input :saved_snapshot_id %>
		<%= f.input :digital_ocean_region_slug %>
