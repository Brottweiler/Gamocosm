<div class="row">
	<div class="col-lg-6">
		<%= panel_with_heading 'IP Address' do %>
			<%= render_server_ip_address(@server) %>
		<% end %>
	</div>
	<div class="col-lg-6">
		<%=panel_with_heading 'Status' do %>
			<%= render_server_status(@server) %>
		<% end %>
	</div>
</div>
<% if @server.is_owner?(current_user) %>
	<div class="row">
		<div class="col-lg-6">
			<%= panel_with_heading 'Friends' do %>
				<table class="table table-striped">
					<tbody>
						<% if @server.friends.blank? %>
							<tr><td colspan="2"><em>Add friends to your server to give them access to start and stop it when you're offline.</em></td></tr>
						<% else %>
							<%= render partial: 'minecraft_servers/friend', collection: @server.friends %>
						<% end %>
					</tbody>
				</table>
				<%= simple_form_for :minecraft_server_friend, url: add_friend_minecraft_server_path(@server), method: :post do |f| %>
					<%= f.input :email %>
					<%= f.button :submit, 'Add', class: 'btn btn-default' %>
				<% end %>
			<% end %>
		</div>
	</div>
<% end %>

<% if false %>
<%= panel_with_heading 'Server Info' do %>
		<%= simple_form_for @server, url: minecraft_server_path(@server) do |f| %>
		<%= f.input :name %>
		<button class="btn btn-default" type="submit">
			Update <i class="fa fa-check"></i>
		</button>
	<% end %>
<% end %>
<% end %>
