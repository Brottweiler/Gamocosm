<% title 'My Volumes - Gamocosm' %>
<div class="row">
	<div class="col-sm-12">
		<div class="page-header">
			<h1>
				Volumes <small>for <%= current_user.email %></small>
				<div class="pull-right">
					<%= link_to new_volume_path, class: 'btn btn-lg btn-primary' do %>
						<span class="fa fa-plus"></span> Create volume
					<% end %>
					<%= link_to 'Open a support ticket', issues_path, class: 'btn btn-lg btn-default' %>
				</div>
			</h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<table class="table table-striped">
			<thead>
				<tr>
					<td colspan="3">Name</td>
					<td colspan="3">Remote ID</td>
					<td colspan="3">Remote Snapshot ID</td>
					<td>Region</td>
					<td>Size (GB)</td>
				</tr>
			</thead>
			<tbody>
			<% if @volumes.blank? %>
				<tr>
					<td colspan="11" class="text-center">
						<em>You have no volumes</em>
					</td>
				</tr>
			<% else %>
				<% @volumes.each do |v| %>
					<tr>
						<td colspan="3"><%= link_to v.name, volume_path(v) %></td>
						<td colspan="3"><%= v.remote_id.nil? ? 'n/a' : v.remote_id %></td>
						<td colspan="3"><%= v.remote_snapshot_id.nil? ? 'n/a' : v.remote_snapshot_id %></td>
						<td><%= v.remote_region_slug %></td>
						<td><%= v.remote_size_gb %></td>
					</tr>
				<% end %>
			<% end %>
			</tbody>
		</table>
	</div>
</div>
